<!DOCTYPE html>
<html>
<head>
    <title>My Store</title>
    <style>
        body { font-family: sans-serif; background-color: #f4f4f4; margin: 0; padding: 20px; }
        .product-list { display: flex; gap: 20px; flex-wrap: wrap; justify-content: center; }
        .card { border: 1px solid #ddd; padding: 15px; border-radius: 10px; width: 220px; background: white; box-shadow: 2px 2px 10px rgba(0,0,0,0.1); text-align: center;}
        img { border-radius: 5px; margin-bottom: 10px; max-width: 100%; height: auto; }
        button { background: #28a745; color: white; border: none; padding: 10px; width: 100%; cursor: pointer; border-radius: 5px; font-weight: bold; }
        button:hover { background: #218838; }
    </style>
</head>
<body>
    <h1 style="text-align: center;">Welcome to My Store</h1>
    <div class="product-list">
        <% if (products && products.length > 0) { %>
            <% products.forEach(p => { %>
                <div class="card">
                    <img src="<%= p.imageUrl || 'https://via.placeholder.com/150' %>" alt="product">
                    <h3><%= p.title %></h3>
                    <p style="color: #28a745; font-size: 1.2em; font-weight: bold;">$<%= p.price %></p>
                    <button>Add to Cart</button>
                </div>
            <% }) %>
        <% } else { %>
            <div style="text-align: center; width: 100%;">
                <p>No products found in the database.</p>
                <p>Please add a product to the <b>Projects</b> table in MySQL Workbench!</p>
            </div>
        <% } %>
    </div>
</body>
</html>